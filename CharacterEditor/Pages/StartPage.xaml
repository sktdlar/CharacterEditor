<Page x:Class="CharacterEditor.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CharacterEditor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button FontSize="28" Name="NewGameBtn" Margin="10" Click="NewGameBtn_Click">Новая игра</Button>
            <Button FontSize="28" x:Name="SelectCharacterBtn" Margin="10" Click="SelectCharacterBtn_Click">Сохранения</Button>
            <Button FontSize="28" Margin="10">Настройки</Button>
            <Button FontSize="28" Margin="10" Name="ExitPage" Click="ExitPage_Click">Выйти</Button>
        </StackPanel>
    </Grid>
</Page>
